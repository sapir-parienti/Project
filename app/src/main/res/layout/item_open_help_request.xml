<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/helpRequestPublisherTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="שם המפרסם" />

        <TextView
            android:id="@+id/helpRequestApartmentNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="דירה: #"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/helpRequestContentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="תוכן הבקשה" />

        <TextView
            android:id="@+id/helpRequestDateTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="תאריך ושעה" />

        <Button
            android:id="@+id/buttonCloseRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סגור בקשה"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>