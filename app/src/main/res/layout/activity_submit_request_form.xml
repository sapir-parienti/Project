<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הגשת פנייה"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextRequestContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="תוכן הפנייה (חובה)"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="381dp"
        android:layout_height="94dp"
        android:layout_marginBottom="16dp"
        android:hint="שם מלא (אופציונלי)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextApartmentNumber"
        android:layout_width="377dp"
        android:layout_height="77dp"
        android:layout_marginBottom="16dp"
        android:hint="מספר דירה (אופציונלי)"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSubmitRequest"
        android:layout_width="143dp"
        android:layout_height="68dp"
        android:text="הגש פנייה" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>