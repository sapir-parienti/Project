<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewHello"
        android:layout_width="183dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:text="שלום!"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBoard"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:text="לוח הודעות הועד"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHello" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginTop="200dp"
        android:text="צפייה בפרופיל האישי"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHello"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/buttonHelp"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        android:text="בקשת עזרה מדיירי הבניין"
        app:layout_constraintEnd_toStartOf="@+id/buttonBoard"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHello" />

    <Button
        android:id="@+id/buttonForm"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:text="טופס פנייה לועד הבית"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBoard"
        app:layout_constraintVertical_bias="0.923" />

    <Button
        android:id="@+id/buttonViewHelp"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_marginEnd="64dp"
        android:text="צפייה בבקשות העזרה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonForm"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHelp"
        app:layout_constraintVertical_bias="0.697" />
</androidx.constraintlayout.widget.ConstraintLayout>